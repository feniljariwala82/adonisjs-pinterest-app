    //   file = this.files[0]
    //   reader.readAsDataURL(this.files[0]);
    // });

    let file 
    $('#postImage').on('change', function (event) {
      event.preventDefault()
      file = this.files[0]
    })

    $('#createPost').on('click', function (event) {
      event.preventDefault()

      let formData = {
        title: $('#titleInput').val(),
        description: $('#descriptionInput').val(),
        tags: tags,
        _csrf: $('input[name="_csrf"]').val(),
        postImage: file
      }
  
      console.log(formData)

      // sending the request
      $.ajax({
        url: "{{ route('post.store') }}",
        method: 'POST',
        data: formData,
        async: true,
        contentType: false,
        processData: false,
      })
        .done((success) => {
          
        })
        .fail((error) => {
          console.log(error)
        })
    })
  })
</script>
